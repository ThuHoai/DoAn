<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backnen"
    tools:context="com.hoaiutc95.fragment_menu.DoanChuFragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/button_click"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/btnBack"
        android:layout_alignBaseline="@+id/btnBack"
        android:text="@string/_text"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textColor="#1b1b19"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnDapAn"
        android:layout_width="50dp"
        android:background="@drawable/btn_hoa_dapan"
        android:layout_marginTop="75dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="A"
        android:layout_alignParentRight="true"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/btnScorce"
        android:layout_width="50dp"
        android:textStyle="bold"
        android:background="@drawable/ic_hoa_do"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnDapAn"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_height="50dp" />

</RelativeLayout>



