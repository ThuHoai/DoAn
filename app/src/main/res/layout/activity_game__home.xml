<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game__home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbgold">
    <Button
        android:id="@+id/btnBack"
        android:layout_marginTop="10dp"
        android:layout_width="55dp"
        android:background="@drawable/btn_home"
        android:layout_marginLeft="15dp"
        android:layout_height="55dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">

        <Button
            android:id="@+id/timchucai"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/menu2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/chonanhghepchu"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/timchucai"
            android:layout_marginTop="10dp"
            android:background="@drawable/lathinh" />

    </RelativeLayout>

</RelativeLayout>

