<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frmAlphabet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hoaiutc95.fragment_menu.Alphabet_FramLayout">

    <Button
        android:id="@+id/btn_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_click" />


    <ImageView
        android:id="@+id/imgBacground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_layer_bgr"
        android:scaleType="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnMusic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_speakeron"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imgPicture"
            android:layout_width="170dp"
            android:layout_height="175dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="145dp" />

        <com.hoaiutc95.doan.CutomTextView
            android:id="@+id/txtPicture"
            style="@style/Custom_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgPicture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="175dp" />

        <Gallery
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPicture"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="60dp"
            android:background="#ffffff" />

    </RelativeLayout>
</FrameLayout>
