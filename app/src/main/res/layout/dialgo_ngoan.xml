<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:minWidth="320dp"
    android:orientation="vertical"
    android:padding="7dp">

    <ImageView
        android:id="@+id/imCup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="180dp"
        android:layout_width="120dp"
        android:src="@drawable/ic_hoa_do" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_below="@id/imCup"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:text="Score: 15"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvName"
        android:layout_below="@id/tvScore"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:text="Name: Tìm đúng chữ"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBeNgoan"
        android:layout_below="@id/tvName"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:text="Phiếu Bé Ngoan"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_below="@id/tvBeNgoan"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:background="@drawable/back_true"
            android:id="@+id/btOk"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:padding="7dp"
            android:src="@drawable/ic_back" />


    </RelativeLayout>

</RelativeLayout>